<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/set_time_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/time_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_set_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="am 10:00 > am 11:00"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/set_time_image"
        app:layout_constraintEnd_toEndOf="@+id/set_time_image"
        app:layout_constraintStart_toStartOf="@+id/set_time_image"
        app:layout_constraintTop_toTopOf="@+id/set_time_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/time_description_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/set_time_image"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_time_do_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="work"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textSize="20sp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>